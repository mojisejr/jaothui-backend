generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model User {
  userId        Int             @id @default(autoincrement())
  walletAddress String          @unique
  profile       String?
  name          String?
  email         String?
  createdAt     DateTime?       @default(now())
  updatedAt     DateTime?       @updatedAt
  DailyTask     DailyTask[]
  Leaderboard   Leaderboard?
  RedemptionLog RedemptionLog[]
  UserPoint     UserPoint?
}

model Quest {
  questId      Int         @id @default(autoincrement())
  name         String
  type         String
  description  String
  points       Int
  nftAddress   String?
  nftRequire   Int?
  erc20Address String?
  erc20Require Int?
  DailyTask    DailyTask[]
}

model DailyTask {
  taskId         Int       @id @default(autoincrement())
  userId         Int
  questId        Int
  pointEarned    Int?
  completed      Boolean
  completed_date DateTime?
  user           User      @relation(fields: [userId], references: [userId])
  quest          Quest     @relation(fields: [questId], references: [questId])
}

model Leaderboard {
  userId           Int  @id @unique @default(autoincrement())
  totalPointEarned Int
  rank             Int
  user             User @relation(fields: [userId], references: [userId])
}

model UserPoint {
  userId    Int       @id @unique @default(autoincrement())
  points    Int?      @default(0)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  user      User      @relation(fields: [userId], references: [userId])
}

model RedemptionLog {
  logId    Int            @id @default(autoincrement())
  userId   Int
  itemId   Int
  address  String?
  received Boolean?       @default(false)
  redeemAt DateTime?      @default(now())
  user     User           @relation(fields: [userId], references: [userId])
  item     RedemptionItem @relation(fields: [itemId], references: [itemId])
}

model RedemptionItem {
  itemId        Int             @id @default(autoincrement())
  name          String
  description   String
  cost          Int
  createdAt     DateTime?       @default(now())
  updatedAt     DateTime?       @updatedAt
  RedemptionLog RedemptionLog[]
}
